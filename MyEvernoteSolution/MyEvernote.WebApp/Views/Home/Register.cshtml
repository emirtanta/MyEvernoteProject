@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Kayıt formu </h1>
                </div>
                <div class="main-content">

                    @* hata mesajları göstermeyi sağlar *@
                    @Html.ValidationSummary(false)

                    @* kullanıcı adı bölümü *@
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @*<input id="email" type="text" class="form-control" name="email" placeholder="Enter your Email">*@
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı adınız" })
                    </div>

                    @* email bölümü *@
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @*<input id="email" type="text" class="form-control" name="email" placeholder="Enter your Email">*@
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Kullanıcı email adresiniz" })
                    </div>

                    @* şifre bölümü *@
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @*<input id="email" type="text" class="form-control" name="email" placeholder="Enter your Email">*@
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Kullanıcı şifreniz" })
                    </div>

                    @* şifre tekrar bölümü *@
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @*<input id="password" type="password" class="form-control" name="password" placeholder="Enter your Password">*@
                        @Html.PasswordFor(model => model.RePassword, new { @class = "form-control", placeholder = "Kullanıcı şifreniz tekrar" })
                    </div>


                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Kayıt ol</button>
                    </div>


                </div>
            </div>
        </div>
    </section>
}

@* register sayfasında footer kısmının gözükmemesi için yazıldı *@
<script>
    $(function () {
        $("footer").parent().hide();
    });
</script>

